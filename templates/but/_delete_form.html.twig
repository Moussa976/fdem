<form method="post" action="{{ path('app_but_delete', {'id': but.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce but du joueur {{  but.joueur.nom }}?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ but.id) }}">
    <button class="btn btn-sm btn-danger">Supprimer</button>
</form>
