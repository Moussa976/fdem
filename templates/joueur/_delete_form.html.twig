<form method="post" action="{{ path('app_joueur_delete', {'id': joueur.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer joueur {{ joueur.nom }} ? ');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ joueur.id) }}">
    <button class="btn btn-sm dropdown-item btn-danger"> <i class="fas fa-trash"></i> Supprimer</button>
</form>
