{% extends 'base.html.twig' %}

{% block title %}Équipe
	{{ equipe.nom}}
{% endblock %}

{% block body %}
	<h1 class="mb-4 text-center">Équipe
		{{ equipe.nom }}</h1>
	<div class="row g-2">
		<div class="col-12 my-4">
			<a class="btn btn-sm btn-secondary" href="{{ path('app_equipe_index') }}">Retour à la liste des équipes</a>
		</div>
		<div class="col-12 col-md-3">
			<div class="d-flex text-center">
				{{ include('equipe/_delete_form.html.twig') }}
				<a class="btn btn-sm btn-success mt-1" href="{{ path('app_equipe_edit', {'id': equipe.id}) }}">Mofidier</a>
			</div>
		</div>
		<div class="col-12 col-md-9">

			<div class="card mb-3" style="max-width: 540px;">
				<div class="row">
					<div class="col-4 text-center align-middle">
						<div class="position-relative top-50 start-50 translate-middle">
							{% if equipe.logo %}
								<img src="{{ asset('images/'~ equipe.logo) }}" alt="{{ equipe.nom}}" title="{{ equipe.nom}}" style="height:auto; max-width:100px;">
							{% else %}
								<img src="{{ asset('images/logo-vierge.png') }}" alt="{{ equipe.nom}}" title="{{ equipe.nom}}" style="height:auto; max-width:100px;">
							{% endif %}
						</div>
					</div>
					<div class="col-8">
						<div class="position-relative top-50 start-50 translate-middle">
							<div class="card-body table-responsive">
								<h5 class="card-title">{{ equipe.nom}}</h5>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
